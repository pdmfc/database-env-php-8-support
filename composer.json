{
    "name": "freis/database-env",
    "description": "Get env variables from database",
    "keywords": [
        "pdmfc",
        "database-env"
    ],
    "homepage": "https://github.com/freis/database-env",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Vitor Hugo",
            "email": "vhugo@vitorhugo.pt",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "jackiedo/dotenv-editor": "^2.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.6.0",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Pdmfc\\DatabaseEnv\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pdmfc\\DatabaseEnv\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Pdmfc\\DatabaseEnv\\DatabaseEnvServiceProvider"
            ],
            "aliases": {
                "DatabaseEnv": "Pdmfc\\DatabaseEnv\\DatabaseEnvFacade"
            }
        }
    }
}
